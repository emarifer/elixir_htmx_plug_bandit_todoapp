<div id="todo_<%= todo.id %>" class="flex justify-between items-center hover:bg-slate-800 rounded-t-lg p-2 border-b border-slate-700 todo">
  <div>
    <div class="flex justify-start gap-2 items-center">
      <input class="checkbox checkbox-success w-3.5 h-3.5" type="checkbox"  name="ids[]" value="<%= todo.id %>">
      <a href="/todos/<%= todo.id %>/detail" hx-target="body"  hx-swap="transition:true" class="block text-ellipsis overflow-hidden whitespace-nowrap w-[25ch] hover:underline" title="<%= todo.note %>">
        <%= todo.note %>
      </a>
    </div>
    <span _="on load call dTime('<%= todo.dt %>') put it into my.textContent" class="block text-lime-400 text-[10px] font-mono overflow-hidden whitespace-nowrap w-[33ch]"></span>
  </div>
  <div class="flex justify-start items-center gap-3 w-fit">
    <button title="Delete Todo" class="btn btn-circle btn-outline btn-xs btn-ghost text-[10px]" hx-target="closest .todo" hx-swap="outerHTML swap:1s"
      hx-delete="/todos/<%= todo.id %>"
      hx-confirm="Are you sure you want to delete the Todo #<%= todo.id %>?"
      onClick="this.addEventListener('htmx:confirm', (e) => {
                e.preventDefault()
                Swal.fire({
                    title: 'Confirm',
                    text: `${e.detail.question}`,
                    icon: 'question',
                    background: '#1D232A',
                    color: 'oklch(0.746477 0.0216 264.436)',
                    showCancelButton: true,
                    confirmButtonColor: '#7ccf00',
                    cancelButtonColor: 'oklch(0.7176 0.221 22.18)',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if(result.isConfirmed) e.detail.issueRequest(true);
                })
            })"
      >
        ❌
      </button>
    <button title="Edit Todo" class="btn btn-circle btn-outline btn-xs btn-ghost test-[10px]" hx-target="closest .todo" hx-swap="outerHTML"
      hx-get="/todos/<%= todo.id %>/edit">📝</button>
  </div>
</div>


